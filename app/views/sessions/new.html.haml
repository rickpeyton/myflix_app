%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_tag url: "/sign-in" do |f|
        %header
          %h1 Sign in
        %fieldset
          = f.email_field :email
          = f.password_field :password
        %fieldset.form-group.action
          = f.submit "Sign in"
          = link_to "Forgot Password?", forgot_password_path
