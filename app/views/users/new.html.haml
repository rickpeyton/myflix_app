%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @user, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-6" do |f|
        %header
          %h1 Register
        %fieldset
          = f.hidden_field "friend_token", value: @token if @token.present?
          = f.text_field :name
          = f.email_field :email
          = f.password_field :password
        %fieldset.actions.control-group.col-sm-offset-2
          %script(src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="#{ENV['STRIPE_TEST_PUBLISHABLE']}" data-name="Rickflix" data-description="Join Rickflix for just $9.99 per month" data-amount="999")
