%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for :invitation, url: invitations_path do |f|
        %header
          %h1 Invite a friend to join MyFlix!
        %fieldset
          = f.hidden_field :user_id, value: @user_id
          = f.text_field :friend_name, label: "Friend's Name"
          = f.text_field :friend_email, label: "Friend's Email"
          = f.text_area :message, value: "Please join this really cool site!", rows: 6, label: "Invitation Message"
          = f.submit "Send Invitation"
